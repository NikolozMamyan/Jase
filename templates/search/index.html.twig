{% extends 'base.html.twig' %}
{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            {% if app.request.method == 'POST' %}
                {% if users|length == 0 %}
                    <div class="text-center">
                        <h4 class="mb-4">Aucun résultat pour votre recherche.</h4>
                        <a href="#" class="btn btn-primary">Nouvelle recherche</a>
                    </div>
                {% else %}
                    <h5 class="mb-4 text-center">Résultats de recherche</h5>
                    {% for user in users %}
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <img src="{{ vich_uploader_asset(user, 'imageFile') }}" class="rounded-circle me-3" alt="Avatar" style="width:40px; height: 40px;">
                                    <div>
                                        <h6 class="mb-1"><a href="{{ path('app_user', {id: user.id}) }}" class="text-decoration-none">{{ user.firstName }} {{ user.lastName }}</a></h6>
                                        {# <p class="text-muted mb-0">{{ user.occupation }}</p> #}
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <a href="#" class="btn btn-primary btn-sm me-2">Message</a>
                                    <a href="#" class="btn btn-outline-secondary btn-sm">Follow</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}